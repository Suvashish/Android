<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="w0269804.movietrailers"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".FilmList"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                  <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SingleFilm"
            android:label="@string/title_activity_single_film"
            android:parentActivityName=".FilmList" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="w0269804.movietrailers.FilmList" />
        </activity>
        <activity
            android:name=".DeleteActivity"
            android:label="@string/title_activity_delete"
            android:parentActivityName=".FilmList">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="w0269804.movietrailers.FilmList" />
        </activity>
        <activity
            android:name=".ViewTrailer"
            android:label="@string/title_activity_view_trailer" >
        </activity>
        <activity
            android:name=".MovieTrailers"
            android:label="@string/title_activity_movie_trailers"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

              
            </intent-filter>
        </activity>
        <activity
            android:name=".AddFilm"
            android:label="@string/title_activity_add_film" >
        </activity>
    </application>

</manifest>
